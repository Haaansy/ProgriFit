<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ProgriFit30" parent="Theme.Material3.Dark.NoActionBar"/>
    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/Fonts</item>
        <item name="android:textColorHint">@color/White</item>
        <item name="hintTextColor">@color/White</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/Fonts</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/White</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/SecondaryBackground</item>
    </style>
    <style name="MyDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- border color -->
        <item name="boxStrokeColor">@color/Fonts</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/White</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/SecondaryBackground</item>
    </style>
</resources>